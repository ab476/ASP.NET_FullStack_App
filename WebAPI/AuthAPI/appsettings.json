{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "DatabaseOptions": {
    "ActiveDatabase": "SQLServer", // ðŸ”¹ Change this to select DB

    "ConnectionStrings": {
      "SQLServer": "Server=SERVER_NAME;Database=DB_NAME;Trusted_Connection=True;TrustServerCertificate=True;",
      "SQLServerAuth": "Server=SERVER_NAME;Database=DB_NAME;User Id=USERNAME;Password=PASSWORD;TrustServerCertificate=True;",
      "MySQL": "Server=SERVER_NAME;Database=DB_NAME;User=USERNAME;Password=PASSWORD;SslMode=Preferred;",
      "MariaDB": "Server=SERVER_NAME;Database=DB_NAME;User=USERNAME;Password=PASSWORD;SslMode=Preferred;",
      "Postgres": "Host=SERVER_NAME;Port=5432;Database=DB_NAME;Username=USERNAME;Password=PASSWORD;",
      "SQLite": "Data Source=app.db;",
      "Oracle": "User Id=USERNAME;Password=PASSWORD;Data Source=HOST:1521/SERVICE_NAME;",
    }
  }
}
